<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 카테고리 타이틀 -->
    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="카테고리"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 일상 회화 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDaily"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="일상 회화"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- 비즈니스 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBusiness"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="18dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@id/cardDaily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="비즈니스"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- 자격증 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExam"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="18dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@id/cardBusiness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="자격증"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- 기초 학습 타이틀 -->
    <TextView
        android:id="@+id/tvBasicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기초 학습"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cardExam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 히라가나/가타카나 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardKana"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginTop="18dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@id/tvBasicTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="히라가나(단어)\n가타카나(단어)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- 한자 외우기 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardKanji"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@id/cardKana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="한자 외우기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="뒤로가기"
        app:srcCompat="@drawable/backarrow"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/black"
        app:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
